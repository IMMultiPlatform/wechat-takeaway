/* components/pay/pay.wxss */
@import '../../wxss/animation.wxss';
view {
  box-sizing: border-box;
}

.container {
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  bottom: 0rpx;
  right: 0rpx;
  z-index: 9999;
}

.mask-c {
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  bottom: 0rpx;
  right: 0rpx;
  z-index: 10001;
  background-color: rgba(0, 0, 0, 0.3);
}

.pay-c {
  position: fixed;
  left: 0rpx;
  bottom: 0rpx;
  right: 0rpx;
  z-index: 10001;
  background-color: white;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.title-c {
  width: 750rpx;
  height: 102rpx;
  border-bottom: 1rpx solid #ECEBEB;
}

.title {
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 33rpx;
  font-weight: 400;
  color: #262626;
  position: relative;
}

.close {
  position: absolute;
  right: 0rpx;
  top: 0rpx;
  width: 88rpx;
  height: 88rpx;
  z-index: 1001;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.close::before {
  content: "\2716";
  color: #AFAFAF;
}

.payInfo-c {
  width: 750rpx;
  height: 385rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.num-c {
  width: 750rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: baseline;
}

.tag {
  font-size: 33rpx;
  line-height: 44rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #262626;
}

.num {
  font-size: 52rpx;
  line-height: 68rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #262626;
}

.method-c {
  width: 700rpx;
  height: 110rpx;
  border-top: solid 1rpx #ECEBEB;
  border-bottom: solid 1rpx #ECEBEB;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.method-title {
  font-size: 29rpx;
  font-family: Adobe Heiti Std;
  font-weight: normal;
  color: #999999;
}

.method-interval {
  flex: 1;
}

.method-text {
  font-size: 29rpx;
  font-family: Adobe Heiti Std;
  font-weight: normal;
  color: #262626;
}

.method-arrow {
  width: 28rpx;
  height: 28rpx;
  margin-left: 28rpx;
}

.method-arrow-img{
  width: 100%;
  height: 100%;
  vertical-align: top;
}

/* 密码键盘输入 */
.input-control{
  width: 100rpx;
  height: 100rpx;
  background-color: rgba(0,0,0,0.3);
  position: absolute;
  top: 0rpx;
  left: -300rpx;
}

.focus {
  border: 2rpx solid #FC934E !important;
}

.password-c {
  position: relative;
  width: 700rpx;
  height: auto;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-top: 94rpx;
}

.password-item {
  width: 98rpx;
  height: 98rpx;
  border: solid 2rpx #C5C5C5;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.password-item-margin {
  margin-left: 10rpx;
}

.pay-btn {
  margin-top: 158rpx;
  margin-bottom: 32rpx;
  width: 700rpx;
  height: 92rpx;
  background-color: #26B6B7;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: row;
  font-size: 29rpx;
  font-family: Adobe Heiti Std;
  font-weight: normal;
  color: #FFFFFF;
}

/* 选择付款方式页面 */
.choose-c {
  position: fixed;
  left: 0rpx;
  bottom: 0rpx;
  right: 0rpx;
  height: 880rpx;
  z-index: 10002;
  background-color: white;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  /* transform: translateX(100%); */
}
.choose-title-c {
  width: 750rpx;
  height: 102rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  position: relative;
  border-bottom: solid 1rpx #ECEBEB;
}
.back-arrow {
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width: 88rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  transform: rotate(180deg);
  z-index: 1003;
}
.back-arrow-img{
  width: 28rpx;
  height: 28rpx;
}

.choose-item {
  width: 700rpx;
  padding: 22rpx 25rpx;
  background-color: #F1F1F1;
  border-radius: 10rpx;
  margin-top: 21rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}

.item-icon{
  width: 50rpx;
  height: 50rpx;
}

.item-text {
  margin-left: 25rpx;
  font-size: 29rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #262626;
}

.pay-choosed {
  width: 45rpx;
  height: 45rpx;
}

.wallet-info {
  font-size: 24rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #999999;
}