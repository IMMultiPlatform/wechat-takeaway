@import "../../app.wxss";

.prod-items {
    width: 345rpx;
    display: inline-block;
    background: #fff;
    padding-bottom: 20rpx;
    border-radius: 30rpx;
    overflow: hidden;
    box-sizing: border-box;
    /* border: 2rpx solid #e1e1e1; */
    box-shadow: 0rpx 6rpx 8rpx rgba(58, 134, 185, 0.2);
}

prod:nth-child(2n-1) .prod-items {
    margin: 20rpx 10rpx 10rpx 20rpx;
}

prod:nth-child(2n) .prod-items {
    margin: 20rpx 20rpx 10rpx 10rpx;
}

.hot-imagecont .hotsaleimg {
    width: 345rpx;
    height: 345rpx;

}

.hot-text .hotprod-text {
    font-size: 28rpx;
    display: -webkit-box;
    word-break: break-all;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    color: #000;
}

.prod-items .hot-imagecont {
    border-radius: 8rpx;
    text-align: center;
    font-size: 0;
}

.prod-items .hot-text {
    margin-top: 20rpx;
}

.prod-items .hot-text .prod-info {
    font-size: 20rpx;
    color: #777;
    display: -webkit-box;
    word-break: break-all;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    margin-top: 6rpx;
    margin-left: 2rpx;
}

.prod-items .hot-text .prod-text-info {
    position: relative;
    height: 50rpx;
    line-height: 70rpx;
    font-family: Arial;
}

.prod-items .hot-text .prod-text-info .price {
    color: #eb2444;
}

.deadline-price {
    font-size: 22rpx;
    margin-right: 5rpx;
}

.pro-info {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    box-sizing: border-box;
    padding: 0 8rpx 0 12rpx;
}